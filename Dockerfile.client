FROM node:14

# Create the working directory
RUN mkdir -p /app
WORKDIR /app

# Install required dependencies
COPY client/package.json /app/package.json
RUN npm install

# Copy the application code
COPY client /app

# Build the frontend client
RUN npm run build

# Set the working directory
WORKDIR /app/build

# Run the frontend client
CMD ["npm", "start"]
